// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ENUM tanımları
enum Role {
  employee
  manager
  hr
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

// MODELLER

model User {
  id              Int         @id @default(autoincrement())
  name            String
  email           String      @unique
  password        String
  role            Role        @default(employee)
  startDate       DateTime    @default(now()) // ✅ çalışan işe başlama tarihi
  annualLeaveDays Int         @default(14) // ✅ yıllık izin hakkı
  department      Department? @relation(fields: [departmentId], references: [id])
  departmentId    Int?
  leaves          Leave[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  isApprover      Boolean     @default(false)

  PasswordResetToken PasswordResetToken[]
}

model Department {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[] // Departmandaki kullanıcılar
}

model Leave {
  id        Int         @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  reason    String
  status    LeaveStatus @default(PENDING)
  comment   String?
  user      User        @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}
